<%= form_with model: @catalog, local: true, :html => {:class => "form-horizontal"} do |form| %>

  <div class="form-group">
    <div class="col-xs-12">
      <%= form.label :expression %>
    </div>
    <div class="col-xs-12">
      <%= form.text_field(:expression, :value => @json_parser_expression, :class => "form-control") %>
    </div>
    <div class="col-xs-12">
      <%= form.label :Parse_from %>
      <%= form.radio_button :parse_source, :url, :checked => @json_parser_last_choose == "url" ? true : false %> <%= form.label :url %>
    </div>
    <div class="col-xs-12">
      <%= form.text_field(:url, :value => @json_parser_url, :class => "form-control") %>
    </div>

    <div class="col-xs-12">
        <%= form.label :Parse_from %>
        <%= form.radio_button :parse_source, :json_text, :checked => @json_parser_last_choose == "json_text" ? true : false %> <%= form.label :json_text %>
        <br>
        <%= form.label :Convert_from %>
        <%= form.radio_button :parse_source, :json_text_encoded, :checked => @json_parser_last_choose == "json_text_encoded" ? true : false %> <%= form.label :json_text_encoded %></li>
        <%= form.radio_button :parse_source, :text_to_json, :checked => @json_parser_last_choose == "text_to_json" ? true : false %> <%= form.label :text_to_json %>
    </div>

    <div class="col-xs-12">
      <%= form.text_area(:json_text, :value => @json_parser_json_text, rows: "5", :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12">
      <%= form.label :result %><br>
    </div>
    <div class="col-xs-12">
      <%= form.text_area(:result, :value => @json_parser_result, rows: "5", :class => "form-control") %>
    </div>
  </div>

  <!-- <p>
    <%= form.submit %>
  </p> -->

  <div class="modal-footer">
    <!-- <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button> -->
    <div class=row>
      <div class="col-xs-14">
        <button class="btn btn-primary btn-block">Parse</button>
      </div>
    </div>
  </div>

<% end %>
